local Players = game:GetService("Players")
local player = Players.LocalPlayer
local mouse = player:GetMouse()
local UIS = game:GetService("UserInputService")

local gui = Instance.new("ScreenGui")
gui.Name = "B0rdrSk1dGUI"
gui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling

local mainFrame = Instance.new("Frame")
mainFrame.BackgroundColor3 = Color3.new(0.1, 0.1, 0.1)
mainFrame.BackgroundTransparency = 0.3
mainFrame.BorderColor3 = Color3.new(0, 1, 0)
mainFrame.BorderSizePixel = 2
mainFrame.Position = UDim2.new(0.05, 0, 0.25, 0)
mainFrame.Size = UDim2.new(0, 200, 0, 300)
mainFrame.ClipsDescendants = true

local title = Instance.new("TextLabel")
title.Text = "B0rdrSk1d V1"
title.Font = Enum.Font.SciFi
title.TextSize = 18
title.TextColor3 = Color3.new(0, 1, 0)
title.BackgroundTransparency = 1
title.Size = UDim2.new(1, 0, 0, 30)
title.Position = UDim2.new(0, 0, 0, 0)

local grid = Instance.new("UIGridLayout")
grid.CellPadding = UDim2.new(0, 5, 0, 5)
grid.CellSize = UDim2.new(1, -10, 0, 30)
grid.HorizontalAlignment = Enum.HorizontalAlignment.Center
grid.SortOrder = Enum.SortOrder.LayoutOrder
grid.Parent = mainFrame

mainFrame.Parent = gui
title.Parent = mainFrame
gui.Parent = player.PlayerGui

-- Fly System
local flying = false
local flySpeed = 2
local flyForce = Instance.new("BodyVelocity")
local flyGyro = Instance.new("BodyGyro")

local flyButton = Instance.new("TextButton")
flyButton.Text = "FLY [F]"
flyButton.TextColor3 = Color3.new(0, 1, 0)
flyButton.BackgroundColor3 = Color3.new(0.2, 0.2, 0.2)
flyButton.BorderSizePixel = 0

local function toggleFly()
    flying = not flying
    if flying then
        flyForce.Velocity = Vector3.new(0, 0, 0)
        flyForce.MaxForce = Vector3.new(40000, 40000, 40000)
        flyForce.Parent = player.Character.HumanoidRootPart
        
        flyGyro.D = 500
        flyGyro.P = 10000
        flyGyro.MaxTorque = Vector3.new(40000, 40000, 40000)
        flyGyro.CFrame = player.Character.HumanoidRootPart.CFrame
        flyGyro.Parent = player.Character.HumanoidRootPart
    else
        flyForce:Destroy()
        flyGyro:Destroy()
    end
end

UIS.InputBegan:Connect(function(input)
    if input.KeyCode == Enum.KeyCode.F then
        toggleFly()
    end
end)

game:GetService("RunService").Heartbeat:Connect(function()
    if flying and player.Character and player.Character.HumanoidRootPart then
        local cam = workspace.CurrentCamera.CFrame
        local moveVec = Vector3.new()
        
        if UIS:IsKeyDown(Enum.KeyCode.W) then moveVec = moveVec + cam.LookVector end
        if UIS:IsKeyDown(Enum.KeyCode.S) then moveVec = moveVec - cam.LookVector end
        if UIS:IsKeyDown(Enum.KeyCode.A) then moveVec = moveVec - cam.RightVector end
        if UIS:IsKeyDown(Enum.KeyCode.D) then moveVec = moveVec + cam.RightVector end
        
        flyForce.Velocity = moveVec * flySpeed * 50
        flyGyro.CFrame = cam
    end
end)

-- Tool TP
local function createToolTP()
    local tool = Instance.new("Tool")
    tool.Name = "TPTool"
    tool.RequiresHandle = false

    tool.Activated:Connect(function()
        local root = player.Character.HumanoidRootPart
        local target = mouse.Hit.Position + Vector3.new(0, 3, 0)
        root.CFrame = CFrame.new(target)
    end)

    tool.Parent = player.Backpack
end

-- Fling
local function fling()
    if player.Character then
        local root = player.Character:FindFirstChild("HumanoidRootPart")
        if root then
            root.AngularVelocity = Vector3.new(0, 5000, 0)
            root.RotVelocity = Vector3.new(0, 5000, 0)
            
            root.Touched:Connect(function(hit)
                if hit.Parent and hit.Parent:FindFirstChild("Humanoid") then
                    hit.Parent.HumanoidRootPart.Velocity = Vector3.new(math.random(-500,500), math.random(500,1000), math.random(-500,500))
                end
            end)
        end
    end
end

-- TP to Player
local tpBox = Instance.new("TextBox")
tpBox.PlaceholderText = "Username"
tpBox.BackgroundColor3 = Color3.new(0.2, 0.2, 0.2)
tpBox.TextColor3 = Color3.new(0, 1, 0)

local tpButton = Instance.new("TextButton")
tpButton.Text = "TP"
tpButton.BackgroundColor3 = Color3.new(0.2, 0.2, 0.2)
tpButton.TextColor3 = Color3.new(0, 1, 0)

local tpFrame = Instance.new("Frame")
tpFrame.BackgroundTransparency = 1
tpFrame.Size = UDim2.new(1, 0, 0, 30)
local uiList = Instance.new("UIListLayout")
uiList.FillDirection = Enum.FillDirection.Horizontal
uiList.Parent = tpFrame

tpBox.Parent = tpFrame
tpButton.Parent = tpFrame
tpFrame.Parent = mainFrame

tpButton.MouseButton1Click:Connect(function()
    local target = Players:FindFirstChild(tpBox.Text)
    if target and target.Character and target.Character:FindFirstChild("HumanoidRootPart") then
        player.Character.HumanoidRootPart.CFrame = target.Character.HumanoidRootPart.CFrame
    end
end)

-- Break Chat (Experimental)
local function breakChat()
    for i = 1, 100 do
        game:GetService("ReplicatedStorage").DefaultChatSystemChatEvents.SayMessageRequest:FireServer(
            string.char(math.random(1000, 10000)).."", "All")
    end
end

-- Add elements to GUI
flyButton.Parent = mainFrame
Instance.new("TextButton", mainFrame).Text = "Tool TP" MouseButton1Click:Connect(createToolTP)
Instance.new("TextButton", mainFrame).Text = "FLING" MouseButton1Click:Connect(fling)
Instance.new("TextButton", mainFrame).Text = "BREAK CHAT" MouseButton1Click:Connect(breakChat)
